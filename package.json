{
  "name": "open-data-portal",
  "version": "1.0.0",
  "description": "Open Data Portal and API for exploring public datasets",
  "type": "module",
  "scripts": {
    "dev": "pnpm run css:build && vite",
    "css:build": "npx tailwindcss -i ./src/styles/main.css -o public/styles.css",
    "css:build:prod": "npx tailwindcss -i ./src/styles/main.css -o public/styles.css --minify",
    "css:watch": "npx tailwindcss -i ./src/styles/main.css -o public/styles.css --watch",
    "deploy": "pnpm run css:build:prod && wrangler deploy",
    "lint": "biome check",
    "db:migrate:remote": "wrangler d1 migrations apply open-data-db --remote",
    "db:migrate:local": "wrangler d1 migrations apply open-data-db --local",
    "db:init": "tsx scripts/init-db.ts",
    "db:init:local": "pnpm run db:init && wrangler d1 execute open-data-db --local --file=./scripts/init.sql",
    "db:init:remote": "pnpm run db:init && wrangler d1 execute open-data-db --remote --file=./scripts/init.sql",
    "prepare": "husky"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^0.18.4",
    "hono": "^4.10.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@types/node": "^22.9.3",
    "autoprefixer": "^10.4.22",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.7.0",
    "typescript": "^5.6.0",
    "vite": "^6.3.5",
    "wrangler": "^4.45.4"
  }
}
