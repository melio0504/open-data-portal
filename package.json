{
  "name": "open-data-portal",
  "version": "1.0.0",
  "description": "Open Data Portal and API for exploring public datasets",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "pnpm run build && wrangler deploy",
    "lint": "biome check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "db:migrate:remote": "wrangler d1 migrations apply open-data-db --remote",
    "db:migrate:local": "wrangler d1 migrations apply open-data-db --local",
    "db:init": "tsx scripts/init-db.ts",
    "db:init:local": "pnpm run db:init && wrangler d1 execute open-data-db --local --file=./scripts/init.sql",
    "db:init:remote": "pnpm run db:init && wrangler d1 execute open-data-db --remote --file=./scripts/init.sql",
    "prepare": "husky"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^0.18.4",
    "axios": "^1.13.2",
    "hono": "^4.10.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.1.0",
    "react-router-dom": "^7.9.6",
    "swr": "^2.2.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@cloudflare/vite-plugin": "^1.15.3",
    "@types/node": "^22.9.3",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.22",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "lucide-react": "^0.469.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.7.0",
    "typescript": "^5.6.0",
    "vite": "^7.1.12",
    "vitest": "^4.0.16",
    "wrangler": "4.51.0"
  }
}
